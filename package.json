{
    "name": "nodein-backend",
    "version": "1.0.0",
    "description": "NodeIn backend",
    "scripts": {
        "start:dev": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.test.ts' --exec 'ts-node -r tsconfig-paths/register src/main.ts'",
        "start:prod": "node dist/main.js",
        "build": "rm -rf dist && tsc -p tsconfig.json",
        "lint": "eslint 'src/**' --ext .ts",
        "test:e2e": "jest --config='src/api/jest.config.ts'",
        "test:unit": "jest --config='src/modules/jest.config.ts'"
    },
    "author": "",
    "license": "ISC",
    "_moduleAliases": {
        "@auth": "dist/modules/auth",
        "@database": "dist/modules/database",
        "@encryption": "dist/modules/encryption",
        "@jwt": "dist/modules/jwt",
        "@logger": "dist/modules/logger",
        "@users": "dist/modules/users"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^4.4.1",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "mongoose": "^5.13.13",
        "morgan": "^1.10.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.1",
        "@types/cors": "^2.8.10",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.11",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^29.2.0",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.40",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.24.0",
        "jest": "^29.2.1",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4"
    }
}
