{
  "name": "nodein-backend",
  "version": "1.0.0",
  "description": "NodeIn backend",
  "scripts": {
    "start:dev": "export NODE_ENV=development && nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.test.ts' --exec 'ts-node -r tsconfig-paths/register src/main.ts'",
    "start:prod": "export NODE_ENV=production && node --require module-alias/register dist/main.js",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "lint": "eslint 'src/**' --ext .ts",
    "test": "export NODE_ENV=test && jest"
  },
  "author": "",
  "license": "ISC",
  "_moduleAliases": {
    "@api": "dist/api/index.js",
    "@auth": "dist/auth/index.js",
    "@database": "dist/database/index.js",
    "@encryption": "dist/encryption/index.js",
    "@logger": "dist/logger/index.js",
    "@users": "dist/users/index.js"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.8",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.13.13",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^29.2.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.18.33",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "jest": "^29.2.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  }
}
