{
    "compilerOptions": {
        // Project options
        "outDir": "./dist",
        "target": "ES6",
        "sourceMap": true,

        // Strict checks
        "noImplicitAny": true,
        "strict": true,

        // Module resolution
        "baseUrl": "./src",
        "esModuleInterop": true,
        "paths": {
            "@auth": ["./modules/auth"],
            "@encryption": ["./modules/encryption"],
            "@jwt": ["./modules/jwt"],
            "@users": ["./modules/users"]
        },
        "module": "CommonJS",

        // Advanced options
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
