{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2020",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "paths": {
            "@auth": ["./modules/auth"],
            "@config": ["./modules/config"],
            "@database": ["./modules/database"],
            "@database/testing": ["./modules/database/testing"],
            "@encryption": ["./modules/encryption"],
            "@jwt": ["./modules/jwt"],
            "@logger": ["./modules/logger"],
            "@users": ["./modules/users"],
            "@users/testing": ["./modules/users/testing"]
        },
        "types": ["node"],
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.test.ts"]
}
